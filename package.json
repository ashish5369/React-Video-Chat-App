{
  "name": "react-video-chat-app",
  "version": "1.0.0",
  "description": "A full-stack MERN video chat application",
  "main": "server/server.js",
  "scripts": {
    "install-server": "cd server && npm install",
    "install-client": "cd client && npm install",
    "install-all": "npm run install-server && npm run install-client",
    "server": "cd server && npm start",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "cd client && npm run build",
    "test": "cd server && npm test && cd ../client && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ashish5369/React-Video-Chat-App.git"
  },
  "keywords": [
    "react",
    "video-chat",
    "webrtc",
    "socket.io",
    "mern",
    "mongodb",
    "express",
    "nodejs"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ashish5369/React-Video-Chat-App/issues"
  },
  "homepage": "https://github.com/ashish5369/React-Video-Chat-App#readme",
  "devDependencies": {
    "concurrently": "^8.0.1"
  }
}
